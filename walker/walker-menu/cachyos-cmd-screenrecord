#!/usr/bin/env bash

set -euo pipefail

[[ -f ~/.config/user-dirs.dirs ]] && source ~/.config/user-dirs.dirs
OUTPUT_DIR="${CACHYOS_SCREENRECORD_DIR:-${XDG_VIDEOS_DIR:-$HOME/Videos}}"

if [[ ! -d "$OUTPUT_DIR" ]]; then
  notify-send "Screen recording directory does not exist: $OUTPUT_DIR" -u critical -t 3000
  exit 1
fi

DESKTOP_AUDIO=false
MICROPHONE_AUDIO=false
STOP_RECORDING=false

for arg in "$@"; do
  case "$arg" in
    --with-desktop-audio) DESKTOP_AUDIO=true ;;
    --with-microphone-audio) MICROPHONE_AUDIO=true ;;
    --stop-recording) STOP_RECORDING=true ;;
  esac
done

screenrecording_active() {
  pgrep -f "^gpu-screen-recorder" >/dev/null
}

start_screenrecording() {
  local filename="$OUTPUT_DIR/screenrecording-$(date +'%Y-%m-%d_%H-%M-%S').mp4"

  local audio_devices=""
  if [[ "$DESKTOP_AUDIO" == "true" ]]; then
    audio_devices+="default_output"
  fi

  if [[ "$MICROPHONE_AUDIO" == "true" ]]; then
    [[ -n "$audio_devices" ]] && audio_devices+="|"
    audio_devices+="default_input"
  fi

  local audio_args=()
  [[ -n "$audio_devices" ]] && audio_args=(-a "$audio_devices")

  gpu-screen-recorder -w portal -f 60 -fallback-cpu-encoding yes -o "$filename" "${audio_args[@]}" -ac aac &
  disown || true
}

stop_screenrecording() {
  pkill -SIGINT -f "^gpu-screen-recorder" || true

  local count=0
  while pgrep -f "^gpu-screen-recorder" >/dev/null && [[ $count -lt 50 ]]; do
    sleep 0.1
    count=$((count + 1))
  done

  if pgrep -f "^gpu-screen-recorder" >/dev/null; then
    pkill -9 -f "^gpu-screen-recorder" || true
    notify-send "Screen recording error" "Recording process had to be force-killed. Video may be corrupted." -u critical -t 5000
    return 1
  fi

  notify-send "Screen recording saved to $OUTPUT_DIR" -t 2000
}

if screenrecording_active; then
  stop_screenrecording
elif [[ "$STOP_RECORDING" == "false" ]]; then
  start_screenrecording
else
  exit 1
fi
